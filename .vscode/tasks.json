{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Sort Frontmatter - Current File",
            "type": "shell",
            "command": "node",
            "args": ["${workspaceFolder}/sort-fm.js", "${file}"],
            "problemMatcher": [],
